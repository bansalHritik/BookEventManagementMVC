@model WebBookEventManager.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}


@{
    <div class="row">
        <div class="list-group">
            <ul class="list-group">
                <li class="list-group-item active">Public Events</li>
                @foreach (var evnt in Model.PublicEvents)
                {
                    <li class="list-group-item">@Html.ActionLink(evnt.Title, "Detail", "Events", new { id = evnt.Id }, null)</li>
                }
            </ul>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="list-group">
                <ul class="list-group">
                    <li class="list-group-item active">Private Events</li>
                    @foreach (var evnt in Model.PrivateEvents)
                    {
                        <li class="list-group-item">@Html.ActionLink(evnt.Title, "Detail", "Events", new { id = evnt.Id }, null)</li>
                    }
                </ul>
            </div>
        }
    </div>
}

<div id="accordion">
    <div class="card">
        <div class="card-header" id="headingOne">
            <h5 class="mb-0">
                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Ongoing Events
                </button>
            </h5>
        </div>
        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            <div class="card-body">
                @foreach (var evnt in Model.PublicEvents)
                {
                    @Html.Partial("_EventCard", evnt);
                }
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header" id="headingTwo">
            <h5 class="mb-0">
                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Past Events
                </button>
            </h5>
        </div>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
            <div class="card-body">
                @foreach (var evnt in Model.PrivateEvents)
                {
                    @Html.Partial("_EventCard", evnt);
                }
            </div>
        </div>
    </div>
</div>